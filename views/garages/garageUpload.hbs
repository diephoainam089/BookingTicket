<div class="panel-header panel-header-sm">
</div>
<div class="content">
  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h5 class="title">Upload Garage</h5>
        </div>
        <div class="card-body">
          {{!-- start form --}}
          {{#if data}}
          <form action="/api/garages/upload/:id" method="post">
            <div class="row">
              <div class="col-md-5 pr-1">
                <div class="form-group">
                  <label>Garage's name</label>
                  <input type="text" class="form-control" id="name" name="name" value="{{data._doc.name}}">
                </div>
              </div>
              <div class="col-md-3 px-1">
                <div class="form-group">
                  <label>Phone number</label>
                  <input type="text" class="form-control" id="phone" name="phone" value="{{data._doc.phone}}">
                </div>
              </div>
              <div class="col-md-4 pl-1">
                <div class="form-group">
                  <label for="address">Address</label>
                  <input type="text" class="form-control" id="address" name="address" value="{{data._doc.address}}">
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <label>Image</label>
                <div class="form-group">
                  <input class=" form-control" id="imagePath" name="imagePath" accept="image/png,image/jpeg" type="file"
                    required />
                  <label class="custom-file-label" for="customFile" value="">Choose file</label>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group form_input">
                  <label>Description</label>
                  <textarea rows="4" cols="80" class="form-control" placeholder="Here can be your description"
                    value="" id="desc" name="desc" >{{data._doc.description}}</textarea>
                </div>
              </div>
            </div>
            <button type="submit" class="btn btn-primary pull-right">Save</button>
            <a name="" id="" class="btn btn-primary pull-right" href="/api/garages/detail/{{data._doc._id}}" role="button">Back
              to detail</a>
            <div class="clearfix"></div>
          </form>
          {{else}}
                    <form action="/api/garages/upload/new" method="post">
            <div class="row">
              <div class="col-md-5 pr-1">
                <div class="form-group">
                  <label>Garage's name</label>
                  <input type="text" class="form-control" id="name" name="name" value="">
                </div>
              </div>
              <div class="col-md-3 px-1">
                <div class="form-group">
                  <label>Phone number</label>
                  <input type="text" class="form-control" id="phone" name="phone" value="">
                </div>
              </div>
              <div class="col-md-4 pl-1">
                <div class="form-group">
                  <label for="address">Address</label>
                  <input type="text" class="form-control" id="address" name="address">
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <label>Image</label>
                <div class="form-group">
                  <input class=" form-control" id="imagePath" name="imagePath" accept="image/png,image/jpeg" type="file"
                    required />
                  <label class="custom-file-label" for="customFile" value="">Choose file</label>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group form_input">
                  <label>Description</label>
                  <textarea rows="4" cols="80" class="form-control" placeholder="Here can be your description"
                    value="Mike" id="desc" name="desc" >Lamborghini Mercy, Your chick she so thirsty, I'm in that two seat Lambo.</textarea>
                </div>
              </div>
            </div>
            <button type="submit" class="btn btn-primary pull-right">Save</button>
            <a name="" id="" class="btn btn-primary pull-right" href="/api/garages/" role="button">Back
              to list</a>
            <div class="clearfix"></div>
          </form>
          {{/if}}
          {{!-- end form --}}
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card card-user">
        <div class="image">
          <img src="../assets/img/bg5.jpg" alt="...">
        </div>
        <div class="card-body">
          <div class="author">
            <a href="#">
              <img class="avatar border-gray" src="../assets/img/mike.jpg" alt="...">
              <h5 class="title">Mike Andrew</h5>
            </a>

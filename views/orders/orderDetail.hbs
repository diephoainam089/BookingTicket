<div class="content">
  <div class="row">
    <div class="col-md-9">
      <div class="card">
        <div class="card-header">
          <h5 class="title">Order detail</h5>
        </div>
        <div class="card-body">
          {{!-- start form --}}
          <form>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label class="bmd-label-floating">Order ID:</label>
                  <p>{{this._id}}</p>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label class="bmd-label-floating">Trip ID:</label>
                  <p>{{this.TripId}}</p>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label class="bmd-label-floating">From station:</label>
                  <p>{{this.fromstation}}</p>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label class="bmd-label-floating">To station:</label>
                  <p>{{this.tostation}}</p>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label class="bmd-label-floating">User name:</label>
                  <p>{{this.userName}}</p>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label class="bmd-label-floating">User email:</label>
                  <p>{{this.userEmail}}</p>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label class="bmd-label-floating">Total price:</label>
                  <p>{{this.totalPrice}}</p>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label class="bmd-label-floating">Order status:</label>
                  <select class="form-control" name="status" id="status">
                    <option value="{{this.status}}" selected hidden>{{this.status}}</option>
                    <option value="1">Done</option>
                    <option value="0">Pending</option>
                    <option value="-1">Cancel</option>
                  </select>
                </div>
              </div>
            </div>
            <button type="submit" class="btn btn-primary pull-right">Delete</button>
            <a name="" id="" class="btn btn-primary pull-right" href="/api/orders" role="button">Back
              to list</a>
            <div class="clearfix"></div>
          </form>
          {{!-- end form --}}
        </div>
      </div>

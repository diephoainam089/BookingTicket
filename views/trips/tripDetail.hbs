<div class="panel-header panel-header-sm">
</div>
<div class="content">
  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <div class="row">
            <div class="col-md-10">
              <h5 class="title">Trip detail</h5>
              <h5 class="title">Trip ID: </h5>
            </div>
            <div class="col-md-2"> <a class="card-title" type="button" href="/api/trips/upload/:id">Edit</a>
            </div>
          </div>
        </div>
        <div class="card-body">
          {{!-- start form --}}
          <form action="/api/trips/detail/:id" method="delete">
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label class="bmd-label-floating">Departure:</label>
                  <p>{{this.departure}}</p>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label class="bmd-label-floating">Destination:</label>
                  <p>{{this.destination}}</p>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label class="bmd-label-floating">Garage's trip:</label>
                  <p>{{this.garagetrip}}</p>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label class="bmd-label-floating">Vehicle:</label>
                  <p>{{this.Vehicle}}</p>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label class="bmd-label-floating">Departure date:</label>
                  <p>{{this.departuredate}}</p>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label class="bmd-label-floating">Departure time:</label>
                  <p>{{this.departuretime}}</p>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label class="bmd-label-floating">Instance:</label>
                  <p>{{this.instance}}</p>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label class="bmd-label-floating">Price:</label>
                  <p>{{this.price}}</p>
                </div>
              </div>
            </div>
            <button type="submit" class="btn btn-primary pull-right">Delete</button>
            <a name="" id="" class="btn btn-primary pull-right" href="/api/trips" role="button">Back
              to list</a>
            <div class="clearfix"></div>
          </form>
          {{!-- end form --}}
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card card-user">
